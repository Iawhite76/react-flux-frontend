#sidebar, #sidebar_inner, #sidebar_header {
  background-color: ups-tan;
}

#sidebar 
  padding: 0;

#search_input
  i
    color search-icon-color
    
  input 
    font-family: Arial, sans-serif;
    border: none;
    width: 100%;

    &:focus 
      outline: none;

#sidebar_header 
  background-color: ups-tan;
  padding: 10px;
  
  i
    font-size: 40px;
    vertical-align: middle;
    padding-right: 18px;
    color: ups-brown;
  
  img, h2 
    display: inline-block;
  
  h2 
    padding-left: 15px;
    font-family: Guardian_Egyp_Regular;


/* Small devices (tablets, 768px and up) */
@media (min-width screen-sm-min) 
  #sidebar_header
    i
      display: none;
      
  #sidebar_inner 
    height: 100vh;
    // padding 0 18px 0 28px
  
  #search_input 
    position relative
    
    input 
      font-size 14px
    
  .search_icon 
    position absolute
    top 0
    right 10px