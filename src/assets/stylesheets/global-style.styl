.drawer {
  z-index: 999;
  left: 0;
  position: absolute;
  width 100%
  height 100vh
}

.drawer-enter {
  left: -100px;
  transition: .5s;
}

.drawer-enter.drawer-enter-active {
  left: 0px;
}

.drawer-leave {
  left: 0px;
  transition: .5s;
}

.drawer-leave.drawer-leave-active {
  left: -100px;
}

h1, .h1, h2, .h2, h3, .h3 {
  margin-top: 0;
  margin-bottom: 0;
}

p, a, li, h2 {
  font-family: Arial, sans-serif;
}

h1 {
  font-size: 23px;
}

h2 {
  font-size: 17px;
  padding: 10px 0;
}

a {
  color: ups-teal;
  
  &:hover,
  &:active,
  &:visited {
    color: ups-teal;
  }
}

p {
  font-size: 12px;
  font-weight: normal;
  color: #291610;
}

main[class^="col-"] {
  padding: 0;
}

#sidebar {
  // height: 100vh;
}

#wrapper {
  margin: 0 auto;
  max-width: 1200px;
  min-width: 320px;
}

div.row {
 margin-left: 0px;
 margin-right: 0px;
}


/* Small devices (tablets, 768px and up) */
@media (min-width screen-sm-min) {
  h1 {
    font-size: 30px;
  }
  
  h2 {
    font-size: 20px;
  }

  p {
    font-size: 14px;
  }

}