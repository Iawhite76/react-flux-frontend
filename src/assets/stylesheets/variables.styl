/* Small devices (tablets, 768px and up) */
screen-sm-min = 768px

/* Medium devices (desktops, 992px and up) */
screen-md-min = 992px

/* Large devices (large desktops, 1200px and up) */
screen-lg-min = 1200px

////////////
// colors //
////////////

ups-tan = #e7d3c0
ups-gold = #ffb511
ups-brown = #351c15
ups-teal = #40c1ac
ups-grey = #f2f2f1
ups-aqua = #33b0ca
change-history-border-color = #795a47
mobile-tab-default-color = #959595

search-icon-color = #ababa9

h1-white = #edded0

menu-item-selected = #f3e9df
